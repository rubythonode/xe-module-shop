<query id="getCartProductsCount" action="select">
    <tables>
        <table name="shop_cart_products"/>
    </tables>
    <columns>
        <column name="count(*)" alias="count"/>
    </columns>
    <conditions>
        <condition operation="equal" column="cart_srl" var="cart_srl" filter="number" notnull="notnull"/>
    </conditions>
</query>