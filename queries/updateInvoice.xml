<query id="updateInvoice" action="update">
    <tables>
        <table name="shop_invoices" />
    </tables>
    <columns>
        <column name="order_srl" var="order_srl" filter="number"  notnull="notnull"/>
        <column name="module_srl" var="module_srl" filter="number"/>
        <column name="comments" var="comments"/>
    </columns>
    <conditions>
        <condition operation="equal" column="invoice_srl" var="invoice_srl" filter="number" notnull="notnull"/>
    </conditions>
</query>