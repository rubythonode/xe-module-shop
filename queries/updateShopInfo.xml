<query id="updateShopInfo" action="update">
    <tables>
        <table name="shop" />
    </tables>
	<columns>
		<column name="shop_content" var="shop_content" default="" />
        <column name="shop_title" var="shop_title" default="" />
		<column name="timezone" var="timezone" />
    </columns>
    <conditions>
        <condition operation="equal" column="module_srl" var="module_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
