<query id="updateCategoriesIncreaseOrder" action="update">
    <tables>
        <table name="shop_categories" />
    </tables>
    <columns>
        <column name="order" default="minus(1)" filter="number" />
    </columns>
    <conditions>
        <condition operation="equal" column="parent_srl" var="parent_srl" filter="number" notnull="notnull" />
        <condition operation="more" column="order" var="order" filter="number" pipe="and" />
    </conditions>
</query>
