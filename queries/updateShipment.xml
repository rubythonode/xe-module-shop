<query id="updateShipment" action="update">
    <tables>
        <table name="shop_shipments" />
    </tables>
    <columns>
        <column name="order_srl" var="order_srl" filter="number"  notnull="notnull"/>
        <column name="module_srl" var="module_srl" filter="number"/>
        <column name="comments" var="comments"/>
        <column name="package_number" var="package_number"/>
    </columns>
    <conditions>
        <condition operation="equal" column="shipment_srl" var="shipment_srl" filter="number" notnull="notnull"/>
    </conditions>
</query>