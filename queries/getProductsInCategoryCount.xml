<query id="getProductsInCategoryCount" action="select">
    <tables>
        <table name="shop_product_categories" alias="pc" />
    </tables>
    <columns>
        <column name="COUNT(*)" alias="product_count" />
    </columns>
    <conditions>
        <condition operation="equal" column="pc.category_srl" var="category_srl" notnull="notnull" />
    </conditions>
</query>