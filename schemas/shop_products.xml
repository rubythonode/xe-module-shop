<table name="shop_products">
  <column name="product_srl" type="number" size="11" notnull="notnull" primary_key="primary_key" />
  <column name="member_srl" type="number" size="11" notnull="notnull" />
  <column name="module_srl" type="number" size="11" notnull="notnull" />
  <column name="parent_product_srl" type="number" size="11" />
  <column name="product_type" type="varchar" size="250" notnull="notnull" />
  <column name="title" type="varchar" size="250" notnull="notnull" />
  <column name="description" type="bigtext" />
  <column name="short_description" type="varchar" size="500" />
  <column name="sku" type="varchar" size="250" notnull="notnull" />
  <column name="weight" type="float" size="10"  />
  <column name="status" type="varchar" size="50" />
  <column name="friendly_url" type="varchar" size="50" />
  <column name="price" type="float" size="20" notnull="notnull" />
  <column name="discount_price" type="float" size="20" />
  <column name="qty" type="number" size="10" />
  <column name="in_stock" type="char" size="1" default="N" />
  <column name="is_featured" type="char" size="1" default="N" />
  <column name="primary_image_filename" type="varchar" size="250" />
  <column name="related_products" type="varchar" size="500" />
  <column name="regdate" type="date" />
  <column name="last_update" type="date" />
</table>
